<%= form_with(scope: :search, url: teacher_classes_path, method: 'get', local: true) do |f| %>
  <div class="form-row align-items-center">
    <div class="col-auto">
      <h4 id="header_title">Virtual Teaching Center</h4>
    </div>
    <div class="col-auto">
      <label class="sr-only" for="inlineFormInput">Class</label>
      <input id="search_title" type="text" name="search[title]" class="form-control mb-2" id="inlineFormInput" placeholder="Writing CSS">
    </div>
    <div class="col-auto">
      <label class="sr-only" for="inlineFormInputGroup">Teacher(surname)</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">by</div>
        </div>
        <input id="search_last_name" type="text" name="search[last_name]" class="form-control" id="inlineFormInputGroup" placeholder="Melone">
      </div>
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-2">Search</button>
    </div>
    <div class="col-auto">
      <button type="button" class="btn btn-primary mb-2"><a id="all_classes_btn" href=<%= teacher_classes_path %>>All Classes</a></button>
    </div>
  </div>
<% end %>