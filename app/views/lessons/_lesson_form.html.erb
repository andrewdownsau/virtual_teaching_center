<%= form_with(model: model , local: true, id:"teacher_class_lesson_form") do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_field :date, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.time_field :start_time, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.time_field :end_time, autofocus: true %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit button %>
  </div>

<% end %>