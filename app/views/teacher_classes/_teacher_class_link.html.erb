
<% if @teacher_classes %>
  <% @teacher_classes.each do |teacher_class| %>
    <div class="card_container">
      <div class="card" style="width: 18rem;">
        <% if teacher_class.image.attached? %>
          <%= image_tag teacher_class.image, class: "card-img-top" %>
        <% else %>
          <img src="..." class="card-img-top" alt="...">
        <% end %>
        <div class="card-body">
          <p class="card-title">
            <%= teacher_class.title %> (
            <% if teacher_class.lessons.first %>
              <%= teacher_class.lessons.first.date %>
              <% if teacher_class.lessons.length > 1 %>
                - <%= teacher_class.lessons.last.date %>
              <% end %>
            <% else %>
              Lessons TBA
            <% end %> )
          </p>
          <p class="card-title">Teacher: <%= Teacher.find(teacher_class.teacher_id).title %> <%= Teacher.find(teacher_class.teacher_id).last_name %></p>
          <p class="card-text">
            <% if teacher_class.description.length > 50 %>
              <%= teacher_class.description[0..49] %>...
            <% else %>
              <%= teacher_class.description %>
            <% end %>
          </p>
          <a href=<%= teacher_class_path(teacher_class.id) %> class="btn btn-primary">View Class</a>
        </div>
      </div>
    </div>
  <% end %>
<% end %>


